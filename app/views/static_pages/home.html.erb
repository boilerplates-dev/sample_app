<% if signed_in? %>
  <div class="row">
    <div class="col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </div>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Where come to the Sample App</h1>
    <p>This is the home page.</p>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary"  %>
  </div>
<% end %>
