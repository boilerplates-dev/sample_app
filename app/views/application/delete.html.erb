<%= form_tag request.url, method: :delete do %>
  <h2>Are you sure want to delete this record?</h2>

  <p>
    <%= submit_tag "Destroy", class: 'btn btn-lg btn-primary' %>
    <% if request.referer.present? %>
      or <%= link_to 'cancel', request.referer, class: 'btn btn-lg btn-primary' %>
    <% end %>
  </p>
<% end %>
