<% provide(:page_title, 'Sign in') %>
<h1 class='center'>Sign in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for :session, url: sessions_path, defaults: { input_html: { class: 'form-control'} } do |f| %>
      <%= f.input :email, placeholder: 'user@domain.com', required: false %>
      <%= f.input :password, placeholder: 'Password', required: false %>
      <%= f.input :remember_me, required: false do %>
        <%= check_box_tag :remember_me, true, params[:remember_me] %>
      <% end %>
      <%= f.button :submit, 'Sign in', class: 'btn btn-lg btn-primary' %>
    <% end %>
  </div>
</div>
