<% provide(:page_title, 'Edit user') %>
<h1 class="center">Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @user, defaults: { input_html: { class: 'form-control'} } do |f| %>
      <%= render 'form', f: f %>
      <%= f.button :submit, 'Save change', class: 'btn btn-lg btn-primary' %>
    <% end %>
  </div>
</div>
